mixin CardProduct(data)
    .card(data-product)
        .card__blockImg
            .card__blockImg__switchesImgs
                img.card__blockImg__switchesImgs__img.smallImg(src=data.img1 alt='product')
                img.card__blockImg__switchesImgs__img.smallImg(src=data.img2 alt='product')
                img.card__blockImg__switchesImgs__img.smallImg(src=data.img3 alt='product')
                .card__blockImg__switchesImgs__mainImg.mainImg
                    img(src=data.mainImg alt='product' data-mainImg)
                    a(href=data.link)
        .card__blockInfo
            h3.card__blockInfo__title(data-name)
                | #{data.title}
            .card__blockInfo__price
                p.card__blockInfo__price__new(data-price)
                    | #{data.priceNew}
                p.card__blockInfo__price__prev
                    | #{data.pricePrev}
            table.card__blockInfo__table
                tr.card__blockInfo__table__row
                    td.card__blockInfo__table__row__cell
                        | Состав
                    td.card__blockInfo__table__row__cell
                        | Хлопок 100%
                tr.card__blockInfo__table__row
                    td.card__blockInfo__table__row__cell
                        | Ширина
                    td.card__blockInfo__table__row__cell
                        | 1,5 м
                tr.card__blockInfo__table__row
                    td.card__blockInfo__table__row__cell
                        | Плотность
                    td.card__blockInfo__table__row__cell
                        | 235 гр/м2
                tr.card__blockInfo__table__row
                    td.card__blockInfo__table__row__cell
                        | Страна производитель
                    td.card__blockInfo__table__row__cell
                        | Россия
            include ../../components/counterCard/CounterCard
            .card__blockInfo__btns
                button.card__blockInfo__btns__btn(data-cart)
                        | В корзину


